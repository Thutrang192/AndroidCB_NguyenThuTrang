<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bai1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple"
        android:text="Lập trình sự kiện"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="20dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số A: "
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">
        </TextView>
        <EditText
            android:id="@+id/soa"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:hint="nhap so a">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số B: "
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">
        </TextView>
        <EditText
            android:id="@+id/sob"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:hint="nhap so b">
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/ketqua"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/tong"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/gray"
            android:text="TỔNG 2 SỐ"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="15dp">
        </Button>
        <Button
            android:id="@+id/hieu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/gray"
            android:text="HIỆU 2 SỐ"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="15dp">
        </Button>
        <Button
            android:id="@+id/tich"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/gray"
            android:text="TÍCH 2 SỐ"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="15dp">
        </Button>
        <Button
            android:id="@+id/thuong"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/gray"
            android:text="THƯƠNG 2 SỐ"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="15dp">
        </Button>
        <Button
            android:id="@+id/ucln"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/gray"
            android:text="ƯỚC CHUNG LỚN NHẤT"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="15dp">
        </Button>
        <Button
            android:id="@+id/thoat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/gray"
            android:text="THOÁT CHƯƠNG TRÌNH"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/purple"
            android:layout_marginBottom="15dp"
            android:textStyle="bold">
        </Button>

    </LinearLayout>
</LinearLayout>